{% extends tpl %}

{% block body %}
	<h1 class="_ header">输入</h1>

	<h2 class="_ header">基本输入</h2>

	<div>
		<input class="_ input">
		<input class="_ input" type="number">
		<select class="_ input">
			<option>1</option>
			<option>2</option>
		</select>
	</div>

	<h2 class="_ header">颜色</h2>

	{% for color in colors %}
		<input class="_ input {{ color }}" placeholder="{{ color }}">
	{% endfor %}
	<hr>

	{% for color in colors %}
		<select class="_ input {{ color }}">
			{% for i in range(1, 6) %}
				<option>{{ i }}</option>
			{% endfor %}
		</select>
	{% endfor %}

	<h2 class="_ header">与其他元素的组合</h2>

	<h3 class="_ header">与按钮的组合</h3>

	<div>
		<div class="_ action input">
			<input>
			<button class="_ button">提交</button>
		</div>

		<div class="_ action input">
			<button class="_ blue button">搜索</button>
			<input>
			<button class="_ red button">重置</button>
		</div>

		<div class="_ action input">
			<input>
			<button class="_ teal button">查询</button>
			<button class="_ red button">撤回</button>
			<button class="_ purple button">移交</button>
		</div>
	</div>

{% endblock %}
